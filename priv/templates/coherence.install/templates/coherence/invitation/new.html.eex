<%%= form_for @changeset, invitation_path(@conn, :create), [as: :invitation], fn f  -> %>
  <%%= if @changeset.action do %>
    <div class="alert alert-danger">
      <p><%= gettext "Oops, something went wrong! Please check the errors below." %></p>
    </div>
  <%% end %>
  <div class="form-group">
    <%%= required_label f, :name, class: "control-label" %>
    <%%= text_input f, :name, class: "form-control", required: "" %>
    <%%= error_tag f, :name %>
  </div>

  <div class="form-group">
    <%%= required_label f, :email, class: "control-label" %>
    <%%= text_input f, :email, class: "form-control", required: "" %>
    <%%= error_tag f, :email %>
  </div>

  <div class="form-group">
    <%%= submit <%= gettext "Send Invitation" %>, class: "btn btn-primary" %>
    <%%= link <%= gettext "Cancel" %>, to: Coherence.Config.logged_out_url("/"), class: "btn" %>
    <%%= if invitation = @conn.assigns[:invitation] do %>
      <%%= link <%= gettext "Resend Invitation!" %>, to: invitation_path(@conn, :resend, invitation.id), class: "btn" %>
    <%% end %>
  </div>
<%% end %>
